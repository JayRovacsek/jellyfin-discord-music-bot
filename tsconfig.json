{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "module": "CommonJS",
    "target": "es2019",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "**/__tests__/*.test.ts"
  ]
}